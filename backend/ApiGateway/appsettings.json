{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Auth0": {
    "Domain": "dev-p44mo426qxs1apjs.us.auth0.com",
    "Audience": "https://api.stocktok.com"
  },
  "ReverseProxy": {
    "Routes": {
      "news-route": {
        "ClusterId": "news-cluster",
        "AuthorizationPolicy": "Default",
        "Match": {
          "Path": "/api/news/{**catch-all}"
        }
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/users" }
        ]
      },
      "watchlist-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/watchlists/{**catch-all}"
        }
      },
      "posts-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/posts/{**catch-all}"
        }
      },
      "posts-hub-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/hubs/comments/{**catch-all}"
        }
      },
      "comments-route": {
        "ClusterId": "social-cluster",
        "Match": { "Path": "/api/comments/{**catch-all}" }
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://user-service:8080/" }
        }
      },
      "social-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://social-service:8080/" }
        }
      },
      "news-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://news-service:8080/" }
        }
      }
    }
  }
}