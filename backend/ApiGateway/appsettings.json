{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Auth0": {
    "Domain": "dev-p44mo426qxs1apjs.us.auth0.com",
    "Audience": "https://api.stocktok.com"
  },
  "ReverseProxy": {
    "Routes": {
      "news-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/news/{**catch-all}"
        }
      },
      "posts-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/posts/{**catch-all}"
        }
      },
      "posts-hub-route": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/hubs/comments/{**catch-all}"
        }
      },
      "comments-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/comments/{**catch-all}"
        }
      }
    },
    "Clusters":{
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "http://user-service:8080" 
          }
        }
      },
      "social-cluster": {
        "Destinations": {
          "social-service": {
            "Address": "http://social-service:8080" 
          }
        }
      }
    }
  }
}
